<footer class="footer">
  <div class="container-fluid">

    <!-- Top section of footer -->
    <div class="container-fluid footer-top-section">
      <!-- Image with short description -->
      <div class="col-xs-3">
        <%= image_tag "appdev_grey_logo.png", class: "appdev-grey-logo" %>
        <p class="appdev-bio">We are empowering the Cornell community through making iOS apps.</p>
      </div>

      <!-- Quick links -->
      <div class="container-fluid col-xs-7">
        <div class="quick-link-section">
          <!-- First column row -->
          <div class="row">
            <a href="/projects" class="col-xs-offset-3 col-xs-2 col-md-3 quick-link" >Projects</a>
            <a href="/recruitment" class="col-xs-2 col-md-3 quick-link" >Recruitment</a>
          </div>

          <!-- Second column row -->
          <div class="row">
            <a href="/team" class="col-xs-offset-3 col-xs-2 col-md-3 quick-link">Team</a>
            <a href="/contact" class="col-xs-2 col-md-3 quick-link">Contact</a>
          </div>

          <!-- Third column row -->
          <div class="row">
            <a href="/training" class="col-xs-offset-3 col-xs-2 col-md-3 quick-link">Training</a>
          </div>
        </div>
      </div>

      <!-- External sites -->
      <div class="col-xs-2">
        <p class="external-site-msg">Follow us:</p>
        <div class="external-site-buttons">
          <a href="https://www.facebook.com/cornellappdev/" class="external-site-button" target="_blank">
            <%= image_tag "facebook_icon.png", class: "external-site-icon" %>
          </a>
          <a href="https://twitter.com/cornellappdev" class="external-site-button" target="_blank">
            <%= image_tag "twitter_icon.png", class: "external-site-icon" %>
          </a>
          <a href="https://www.linkedin.com/company/cornell-app-development-cuappdev-" class="external-site-button" target="_blank">
            <%= image_tag "linkedin_icon.png", class: "external-site-icon" %>
          </a>
          <a href="https://github.com/cuappdev" class="external-site-button" target="_blank">
            <%= image_tag "github_icon.png", class: "external-site-icon" %>
          </a>
        </div>
      </div>
    </div>

    <!-- Use two outer containers to get same side padding as top/bottom sections -->
    <div class="container-fluid">
      <div class="container-fluid">
        <div class="footer-divider"></div>
      </div>
    </div>

    <!-- Bottom section of footer -->
    <div class="container-fluid footer-bottom-section">
      <div class="col-xs-6">
        <p class="mailing-list-msg">
          For updates, join
          <a href="https://cuappdev.typeform.com/to/EijMRG" class="mailing-list" target="_blank">
            our mailing list.
          </a>
        </p>
      </div>
      <div class="col-xs-6">
        <p class="copyright-msg">@ 2017 Cornell App Development All Rights reserved</p>
      </div>
    </div>

  </div>
</footer>
