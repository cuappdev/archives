description "upstart"
start on (filesystem)
stop on runlevel [016]
respawn
setuid root
setgid nogroup
chdir {{ repository_path }}/src
# Run server w/environment variables marked by -e's
exec gunicorn app:app --bind=unix:/tmp/register.sock \
  --workers 3 --user=root --log-level=debug \
  -e DB_USERNAME={{ DB_USERNAME }} \
  -e DB_PASSWORD={{ DB_PASSWORD }} \
  -e DB_NAME={{ DB_NAME }} \
  -e DB_HOST={{ DB_HOST }} \
  -e APP_SETTINGS={{ APP_SETTINGS }}
